<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Hello, world!</title>
</head>

<body>

  {{#each success_messages}}
  <div class="alert alert-success">
    {{this}}
  </div>
  {{/each}}

  {{#each error_messages}}
  <div class="alert alert-danger">
    {{this}}
  </div>
  {{/each}}

  <div class="container">
    {{#if user}}
    <nav class="navbar navbar-expand-sm bg-light">
      <div class="container-fluid">
        <!-- Links -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link btn btn-outline-warning" href="/products/" style="color: black;">All Products</a>
          </li>
          <span style="margin-right: 5px;"></span>
          <li class="nav-item">
            <a class="nav-link btn btn-outline-warning" href="/products/add-product/" style="color: black;">Create New Product</a>
          </li>
          <span style="margin-right: 5px;"></span>
          <li class="nav-item">
            <a class="nav-link btn btn-outline-warning" href="#" style="color: black;">Link 3</a>
          </li>
        </ul>
      </div>
      Hello,<span style="margin-right: 5px;"></span><span style="text-transform: capitalize;">{{user.username}}</span>
      <span style="margin-right: 20px;"></span>
      <a href="/users/logout" class="btn btn-dark btn-sm">Logout</a>
      {{else}}
      <a href="/users/login" class="btn btn-success btn-sm">Login</a>
      {{/if}}
    </nav>
    {{#block "content"}}
    {{/block}}
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>

</body>

</html>