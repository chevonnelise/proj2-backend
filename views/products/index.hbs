{{#extends "base"}}

{{#block "content"}}
<h1>All Products</h1>

<table class="table">
    <thead>
        <th>
            Product ID
        </th>
        <th>
            Name
        </th>
        <th>
            Cost
        </th>
        <th>
            Description
        </th>
        <th>
            Quantity
        </th>
        <th>
        </th>
    </thead>
    {{#each products}}
    <tr>
        <td>
            {{this.id}}
        </td>
        <td>
            {{this.name}}
        </td>
        <td>
            {{this.cost}}
        </td>
        <td>
            {{this.description}}
        </td>
        <td>
            {{this.quantity}}
        </td>
        <td>
            <a href="/products/update-product/{{this.id}}" class="btn btn-dark">Update</a>
        </td>
    </tr>
    {{/each}}
</table>

{{/block}}

{{/extends}}