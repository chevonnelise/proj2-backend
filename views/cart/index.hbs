{{#extends "base"}}

{{#block "content"}}
<h1>Shopping Cart</h1>
<div class="card">
    <div class="card=body">
        {{#each cartItems}}
        <div class="card-title">
            <h3>{{this.product.name}}</h3>
        </div>
        <ul>
            <li>Category: {{this.product.category.name}}</li>
            <li>Cost: {{this.product.cost}}</li>
            <li>Quantity: {{this.quantity}}</li>
        </ul>
        {{/each}}
    </div>
</div>

{{/block}}

{{/extends}}